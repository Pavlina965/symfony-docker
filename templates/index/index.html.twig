{% extends 'base.html.twig' %}

{% block body %}
	<div class="content">
		{% for article in articles %}
			<div class="article">
				<h3 class="articlePrewiev">
					<a href="{{ path('article_show', {id: article.id}) }}">{{ article.name }}</a>
				</h3>
				<div class="articleContent">
				<p >{{ article.content }}</p>
				<span>likes{{article.evaulation|length }}</span>
				</div>
				<div class="articleInfo">
					<span>
						number of comments: {{article.getComments|length}}
					</span>
					<span>date of publication: {{ article.date|date("d.m.y") }}</span>

				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
